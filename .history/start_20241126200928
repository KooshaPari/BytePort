
cleanup() {
    echo "Cleaning up..."
    pkill -P $$
    exit 0
}
trap cleanup SIGINT EXIT

if [ "$1" = "prod" ]; then
    echo "Starting in production mode..."
    cd frontend
    npm run build
    npm run start &
    cd ../backend/byteport
    go run main.go
elif [ "$1" = "dev" ]; then
    echo "Starting in development mode..."
    
    # Start frontend
    cd frontend
    npm run dev -- --port 5173 &
    
    # Start backend
    cd ../backend/byteport
    air &
    
    # Wait for both processes
    wait
else
    echo "Usage: $0 {dev|prod}"
    exit 1
fi#!/bin/bash

cleanup() {
    echo "Cleaning up..."
    pkill -P $$
    exit 0
}
trap cleanup SIGINT EXIT

if [ "$1" = "prod" ]; then
    echo "Starting in production mode..."
    cd frontend
    npm run build
    npm run start &
    cd ../backend/byteport
    go run main.go
elif [ "$1" = "dev" ]; then
    echo "Starting in development mode..."
    
    # Start frontend
    cd frontend
    npm run dev -- --port 5173 &
    
    # Start backend
    cd ../backend/byteport
    air &
    
    # Wait for both processes
    wait
else
    echo "Usage: $0 {dev|prod}"
    exit 1
fi